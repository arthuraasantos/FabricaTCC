                    <input type="email" class="form-control" id="EmployeeEmail" name="EmployeeEmail" placeholder="E-mail" ng-model="register.EmployeeEmail" ng-required="true" />
                    <br />
                    <input id="btnlogin" type="submit" class="btn btn-outline btn-success btn-block" ng-click="register()" ng-disabled="!registerForm.$valid" value="Registre-me!">
