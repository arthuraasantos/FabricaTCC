
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

@if (@TempData["Mensagem"] != null)
{
    <script>ShowWarning('@TempData["Mensagem"]', false)</script>
}
else
{
    if (@TempData["MensagemErro"] != null)
    {
        <script>ShowDanger('@TempData["MensagemErro"]', false)</script>
    }
    else
    {
        if (@TempData["MensagemAlerta"] != null)
        {
            <script>ShowWarning('@TempData["MensagemAlerta"]', false)</script>

        }
    }
}

<link href="~/Content/Home/index.css" rel="stylesheet" />

<div class="pn-index-no-adm" style="display: none">
    <h2 class="page-header">
        <span>
            <label class="pn-index-employee-organization"></label>
            <img class="pn-index-employee-organization-loader" src="~/img/ajax-loader-default.gif" />
        </span>
    </h2>
    <!-- Confirmação do ponto em Modal -->
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target=".bs-example-modal-sm">Marcar ponto</button>
                @Html.ActionLink("Consultar marcações", "Lista", "Ponto", new { }, new { @class = "btn btn-default btn-sm", @style = "float: right; margin: 7px 0;" })
            </div>
            <div class="panel-body">
                <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            @using (Html.BeginForm("Marcar", "Ponto", FormMethod.Post))
                            {
                                <div class="modal-body">

                                    <div class="form-group">
                                        <label>Email<label>
                                        <label class="pt-index-employee-email">    
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Senha")
                                        @Html.Password("Senha", "", new { @type = "password", @class = "form-control", @placeholder = "senha" })
                                    </div>

                                </div>
                                <div class="modal-footer">
                                    <input type="submit" value="Confirmar" class="btn btn-outline btn-success form-control" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div>
                    <strong>Funcionário:</strong> 
                    <span>
                        <label class="pn-index-employee-name"></label> 
                        <img class="pn-index-employee-name-loader" src="~/img/ajax-loader-default.gif" />
                    </span>
                </div>
                <div>
                    <strong>Saldo de horas:</strong> 
                    <span>
                        <label class="pn-index-employee-workhours"></label> 
                        <img class="pn-index-employee-workhours-loader" src="~/img/ajax-loader-default.gif" />
                    </span>
                </div>
                <div id="employee-hithour" style="display: none">
                    <span>
                        <label class="pn-index-employee-hithour"></label> 
                        <img class="pn-index-employee-hithour-loader" src="~/img/ajax-loader-default.gif" />
                    </span>
                </div>
                <div id="employee-notification-warning" style="display: none">
                    <span style="color:red">
                        <label class="pn-index-employee-notification-warning"></label> 
                        <img class="pn-index-employee-notification-warning-loader" src="~/img/ajax-loader-default.gif" />
                    </span>
                </div>
        </div>
    </div>


    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <br />
                    <div class="col-lg-4 col-md-1">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="glyphicon glyphicon-time fa-4x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">Marcações</div>
                                    </div>
                                </div>
                            </div>
                            <a href="@Url.Action("Index", "Solicitacao")">
                                <div class="panel-footer">
                                    <span class="pull-left">
                                        Ver solicitações pendentes
                                        <span class="badge">
                                            <span>
                                                <span class="pn-index-solicitation-hour-pending"></span> 
                                                <img class="pn-index-solicitation-hour-pending-loader" src="~/img/ajax-loader-default.gif" />
                                            </span>
                                        </span>
                                    </span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                            <a href="@Url.Action("Respostas", "Solicitacao")">
                                <div class="panel-footer">
                                    <span class="pull-left">
                                        Ver respostas das solicitações
                                        <span class="badge">
                                            @ViewBag.QtdeRespostasHoras</span>
                                    </span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-1">
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="glyphicon glyphicon-calendar fa-4x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">Folgas</div>
                                    </div>
                                </div>
                            </div>
                            <a href="@Url.Action("Index", "Folga")">
                                <div class="panel-footer">
                                    <span class="pull-left">
                                        Ver solicitações pendentes
                                        <span class="badge">
                                            <span>
                                                <span class="pn-index-solicitation-hour-pending"></span> 
                                                <img class="pn-index-solicitation-hour-pending-loader" src="~/img/ajax-loader-default.gif" />
                                            </span>
                                        </span>
                                    </span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                            <a href="@Url.Action("Respostas", "Folga")">
                                <div class="panel-footer">
                                    <span class="pull-left">
                                        Ver respostas das solicitações
                                        <span class="badge">@ViewBag.QtdeRespostasFolgas</span>
                                    </span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-1">
                        <div class="panel panel-yellow">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="glyphicon glyphicon-plane fa-4x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">Férias</div>
                                    </div>
                                </div>
                            </div>
                            <a href="@Url.Action("Index", "Ferias")">
                                <div class="panel-footer">
                                    <span class="pull-left">
                                        Ver solicitações pendentes
                                        <span class="badge">
                                            <span>
                                                <span class="pn-index-solicitation-vacation-pending"></span> 
                                                <img class="pn-index-solicitation-vacation-pending-loader" src="~/img/ajax-loader-default.gif" />
                                            </span>
                                        </span>
                                    </span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                            <a href="@Url.Action("Respostas", "Ferias")">
                                <div class="panel-footer">
                                    <span class="pull-left">
                                        Ver respostas das solicitações 
                                        <span class="badge">@ViewBag.QtdeRespostasFerias</span>
                                    </span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1">
        </div>
    </div>
</div>
<div class="pn-index-adm" style="display: none">
    <h2 class="page-header">Página Inicial</h2>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                <div><strong>Quantidade total de Empresas:</strong> @ViewBag.QtdeEmpresas</div>
                <div><strong>Quantidade total de Funcionários:</strong> @ViewBag.QtdeFuncionario</div>
            </div>
        </div>
    </div>
</div>




