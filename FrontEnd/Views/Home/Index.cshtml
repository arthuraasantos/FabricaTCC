@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}


<h1 class="page-header">DashBoard</h1>
@*@Html.ActionLink("Marcar Ponto", "Index", "Ponto",
    new { @class = "btn btn-outline btn-default" })*@

<!-- Confirmação do ponto em Modal -->
<div class="">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">Marcar ponto</button>
    <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">@ViewBag.Funcionario</div>
                @using (Html.BeginForm("Marcar", "Ponto", FormMethod.Post))
                {
                    <div class="modal-body">

                        <div class="form-group">
                            @Html.Label("Email")
                            @Html.TextBox("Email", (string)@ViewBag.EmailFuncionario, new { @type = "email", @class = "form-control", @placeholder = "Email", @disabled = "disabled"})
                        </div>
                        <div class="form-group">
                            @Html.Label("Senha")
                            @Html.Password("Senha", "", new { @type = "password", @class = "form-control", @placeholder = "Senha" })
                        </div>

                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Login" class="btn btn-outline btn-success form-control" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div>
    <div>Empresa: @ViewBag.Empresa</div>
    <div>Funcionário: @ViewBag.Funcionario</div>
    <div>Horários: @ViewBag.HorariosMarcadosHoje</div>
    <div>Saldo de horas: @ViewBag.HorasTrabalhadas</div>
</div>


