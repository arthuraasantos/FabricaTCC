@using Dominio.Model;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

@model List<Empresa>


<script>
    function bloquearEmpresa(id) {
        var titulo, msg, tipo;
        
        $.ajax({
            url: "/Empresa/BloquearEmpresa",
            data: {
                id: id
            },
            type: "GET",
            datatype: "json",
            contenttype: "application/json; charset=utf-8",
            success: function (data) {
                titulo = "Aviso";
                msg = "\"" + data + "\" habilitada com sucesso";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-ok', "");
            },
            error: function (data) {
                titulo = "Aviso";
                msg = "Erro ao desabilitar \"" + data + "\" ";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-remove', "");
            },
        });
    };

    function desbloquearEmpresa(id) {
        var titulo, msg, tipo;

        $.ajax({
            url: "/Empresa/DesbloquearEmpresa",
            data: {
                id: id
            },
            type: "GET",
            datatype: "json",
            contenttype: "application/json; charset=utf-8",
            success: function (data) {
                titulo = "Aviso";
                msg = " \"" + data + "\" desabilitada com sucesso";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-ok', "");
            },
            error: function (data) {
                titulo = "Aviso";
                msg = "Erro ao habilitar \"" + data + "\" ";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-remove', "");
            },
        });

    };

</script>

@if (FrontEnd.Models.Sessao.PerfilFuncionarioLogado == Seedwork.Const.PerfilAcesso.Funcionario || FrontEnd.Models.Sessao.PerfilFuncionarioLogado == Seedwork.Const.PerfilAcesso.Gerente)
{                                    
    <h1 class="page-header">@ViewBag.EmpresaLogada</h1>
}
else
{
    <h1 class="page-header">Listagem de Empresas</h1>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @if (FrontEnd.Models.Sessao.PerfilFuncionarioLogado == Seedwork.Const.PerfilAcesso.Administrador)
                {
                    @Html.ActionLink("Adicionar Empresa", "Novo", "Empresa", new { @class = "btn btn-primary" })
                }
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Nome Fantasia</th>
                                <th>Razão Social</th>
                                <th>Cnpj</th>
                                <th>Cidade</th>
                                <th>Estado</th>
                                @if (FrontEnd.Models.Sessao.PerfilFuncionarioLogado != Seedwork.Const.PerfilAcesso.Funcionario)
                                {
                                    <th>Operações</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.NomeFantasia</td>
                                    <td> @item.RazaoSocial </td>
                                    <td> @item.Cnpj </td>
                                    <td> @item.Cidade </td>
                                    <td> @item.Estado </td>

                                    @if (FrontEnd.Models.Sessao.PerfilFuncionarioLogado != Seedwork.Const.PerfilAcesso.Funcionario)
                                    {
                                        <td>
                                            @Html.ActionLink("Editar", "Visualizar", new { id = item.Id }, new { @class = "btn btn-outline btn-xs btn-info" })
                                            @if (FrontEnd.Models.Sessao.PerfilFuncionarioLogado == Seedwork.Const.PerfilAcesso.Administrador)
                                            {
                                                if (item.Bloqueado == "Y")
                                                {
                                                    <input type="button" class="btn btn-outline btn-xs btn-success" value="Habilitar  " onclick="desbloquearEmpresa('@item.Id');" />
                                                }
                                                else
                                                {
                                                    <input type="button" class="btn btn-outline btn-xs btn-warning" value="Desabilitar" onclick="bloquearEmpresa('@item.Id');" />
                                                }

                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>

