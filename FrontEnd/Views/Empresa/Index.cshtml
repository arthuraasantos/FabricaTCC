@using Dominio.Model;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

@model List<Empresa>

<h1 class="page-header">Listagem de Empresas</h1>

<div class="navbar">


    @Html.ActionLink("Adicionar Empresa", "Novo", "Empresa",
                           new { @class = "btn btn-outline btn-default" })
    <br />
    <br />
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Nome Fantasia</th>
                                <th>Razão Social</th>
                                <th>Cnpj</th>
                                <th>Cidade</th>
                                <th>Estado</th>
                                <th>Operações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.NomeFantasia</td>
                                    <td> @item.RazaoSocial </td>
                                    <td> @item.Cnpj </td>
                                    <td> @item.Cidade </td>
                                    <td> @item.Estado </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Visualizar",
                                         new { id = item.Id },
                                            new { @class = "btn btn-outline btn-info" })
                                        @Html.ActionLink("Excluir  ", "Excluir",
                                     new { id = item.Id },
                                                                        new { @class = "btn btn-outline btn-warning" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>

