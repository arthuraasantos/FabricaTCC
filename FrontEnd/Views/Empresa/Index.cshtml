@using Dominio.Model;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

@model List<Empresa>


<script>
    function bloquearEmpresa(id) {
        var titulo, msg, tipo;
        
        $.ajax({
            url: "/Empresa/BloquearEmpresa",
            data: {
                id: id
            },
            type: "GET",
            datatype: "json",
            contenttype: "application/json; charset=utf-8",
            success: function (data) {
                titulo = "Aviso";
                msg = "\"" + data + "\" bloqueada com sucesso";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-ok', "");
            },
            error: function (data) {
                titulo = "Aviso";
                msg = "Erro ao bloquear \"" + data + "\" ";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-remove', "");
            },
        });
    };

    function desbloquearEmpresa(id) {
        var titulo, msg, tipo;

        $.ajax({
            url: "/Empresa/DesbloquearEmpresa",
            data: {
                id: id
            },
            type: "GET",
            datatype: "json",
            contenttype: "application/json; charset=utf-8",
            success: function (data) {
                titulo = "Aviso";
                msg = " \"" + data + "\" ativada com sucesso";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-ok', "");
            },
            error: function (data) {
                titulo = "Aviso";
                msg = "Erro ao ativar \"" + data + "\" ";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-remove', "");
            },
        });

    };

</script>
<h1 class="page-header">Listagem de Empresas</h1>

@if (ViewBag.Permissao == "ADM")
{
    <div class="navbar">
        @Html.ActionLink("Adicionar Empresa", "Novo", "Empresa",
                           new { @class = "btn btn-outline btn-default" })
        <br />
        <br />
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Nome Fantasia</th>
                                <th>Razão Social</th>
                                <th>Cnpj</th>
                                <th>Cidade</th>
                                <th>Estado</th>
                                @if (ViewBag.Permissao != "FUN")
                                {
                                    <th>Operações</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.NomeFantasia</td>
                                    <td> @item.RazaoSocial </td>
                                    <td> @item.Cnpj </td>
                                    <td> @item.Cidade </td>
                                    <td> @item.Estado </td>

                                    @if (ViewBag.Permissao == "GRH" || ViewBag.Permissao == "ADM")
                                    {
                                        <td class="col-sm-2">

                                            @Html.ActionLink("Editar", "Visualizar",
                                                new { id = item.Id },
                                                new { @class = "btn btn-outline btn-info" })
                                            @if (ViewBag.Permissao == "ADM")
                                            {
                                                if (item.Bloqueado == "Y")
                                                {
                                                    <input type="button" class="btn btn-outline btn-success" value="Ativar   " onclick="desbloquearEmpresa('@item.Id');" />
                                                }
                                                else
                                                {
                                                    <input type="button" class="btn btn-outline btn-warning" value="Desativar" onclick="bloquearEmpresa('@item.Id');" />
                                                }

                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>

