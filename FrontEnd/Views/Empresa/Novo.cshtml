<link href="~/Content/Site.css" rel="stylesheet" />

@{
    ViewBag.Title = "Novo";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

@model FrontEnd.Models.EmpresaNovo

<h2 class="page-header">Nova Empresa</h2>
<div class="row">
    <div class="col col-lg-12">
        <div class="panel panel-default">
            <div class="panel panel-body">
                @using (Html.BeginForm("Incluir", "Empresa", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Razão Social")
                        @Html.TextBoxFor(e => e.RazaoSocial, new { @class = "form-control", @required = "required", @maxlength = "100" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Nome Fantasia")
                        @Html.TextBoxFor(e => e.NomeFantasia, new { @class = "form-control", @required = "required", @maxlength = "100" })
                    </div>
                    <div class="form-group">
                        @Html.Label("CNPJ ")
                        @Html.TextBoxFor(e => e.Cnpj, new { @class = "form-control", id = "CNPJ", @required = "required" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-outline btn-success" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

