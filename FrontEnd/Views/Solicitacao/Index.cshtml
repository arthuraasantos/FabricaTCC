@using Dominio.Model;
@{
    ViewBag.Title = "Consultar horários ajustados";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

@model List<Solicitacao>

<h1 class="page-header">Solicitações no ponto</h1>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Funcionario</th>
                        <th>Data/Hora Marcada</th>
                        <th>Data/Hora Válida</th>
                        <th>Data/Hora Ajustada</th>
                        <th>Motivo do Ajuste</th>
                        <th>Aprovar?</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>@item.Funcionario.Nome</td>
                                <td>@item.DataMarcacao.GetValueOrDefault().ToString("dd/MM/yyyy HH:mm") </td>
                                <td>@item.DataValida..ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.Justificativa</td>
                                <td>
                                    @Html.ActionLink("Aprovar", "AprovarRejeitarAjuste",  new { id = item.Id, status = Seedwork.Const.StatusPonto.Ajustado }, new { @class = "btn btn-outline btn-info" })
                                    @Html.ActionLink("Rejeitar", "AprovarRejeitarAjuste", new { id = item.Id, status = Seedwork.Const.StatusPonto.AjusteRejeitado }, new { @class = "btn btn-outline btn-danger" })
                                </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<ul class="nav nav-tabs" role="tablist" id="myTab">
    <li class="active"><a href="#dadosgerais" role="tab" data-toggle="tab">Dados Gerais</a></li>
    <li><a href="#impostosretidos" role="tab" data-toggle="tab">Impostos Retidos</a></li>
    <li><a href="#impostosnaoretidos" role="tab" data-toggle="tab">Impostos Não Retidos</a></li>
    <li><a href="#complementares" role="tab" data-toggle="tab">Complementares</a></li>
    <li><a href="#institucional" role="tab" data-toggle="tab">Institucional</a></li>
    <li><a href="#operacional" role="tab" data-toggle="tab">Operacional</a></li>
    <li><a href="#reajuste" role="tab" data-toggle="tab">Histórico de Reajustes</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane active" id="dadosgerais">
        <br />
        <table>
            <tr>
                <td>Projeto/AVS:*</td>
                <td>
                    <asp:DropDownList runat="server" ID="ddlProjeto" CssClass="form-control">
                        <asp:listitem text="PROJETO" value="projeto"></asp:listitem>
                        <asp:listitem text="AV'S" value="avs"></asp:listitem>
                    </asp:DropDownList>
                </td>
            </tr>
            <tr>
                <td>Conta Corrente:*</td>
                <td>
                    <asp:TextBox runat="server" ID="txtContaCorrente" ClientIDMode="Static" CssClass="form-control" onBlur="VerificaContaCorrente();"></asp:TextBox>
                </td>
            </tr>
            <tr>
                <td>Projeto:*</td>
                <td>
                    <asp:TextBox runat="server" ID="txtProjeto" CssClass="form-control"></asp:TextBox>
                </td>
            </tr>
            <tr>
                <td>Cliente:*</td>
                <td>
                    <asp:DropDownList runat="server" ID="ddlCliente" Width="190px" CssClass="form-control" AutoPostBack="true" OnSelectedIndexChanged="ddlCliente_SelectedIndexChanged"></asp:DropDownList>
                </td>
            </tr>
            <tr>
                <td>CNPJ:*</td>
                <td>
                    <asp:Label runat="server" ID="lblCnpj"></asp:Label>
                </td>
            </tr>
            <tr>
                <td>Data Início:*</td>
                <td>
                    <asp:TextBox runat="server" ID="txtDataInicio" ClientIDMode="Static" CssClass="form-control"></asp:TextBox>
                </td>
            </tr>
        </table>
    </div>
</div>
