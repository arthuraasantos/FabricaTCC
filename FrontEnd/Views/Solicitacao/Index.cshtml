@using Dominio.Model;
@{
    ViewBag.Title = "Consultar horários ajustados";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

@model List<Solicitacao>

<h1 class="page-header">Solicitações no ponto</h1>

<script type="text/javascript">
    $('#myTab a').click(function (e) {
        e.preventDefault()
        $(this).tab('show')
    })
</script>

<div role="tabpanel">

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#todos" aria-controls="todos" role="tab" data-toggle="tab">Todos</a></li>
        <li role="presentation"><a href="#ajutes" aria-controls="ajutes" role="tab" data-toggle="tab">Ajustes</a></li>
        <li role="presentation"><a href="#inclusoes" aria-controls="inclusoes" role="tab" data-toggle="tab">Inclusões</a></li>
        <li role="presentation"><a href="#desconsideracoes" aria-controls="desconsideracoes" role="tab" data-toggle="tab">Desconderações</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="todos">
            
            <!--   TODOS   -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Funcionario</th>
                                <th>Tipo</th>
                                <th>Data/Hora Marcada</th>
                                <th>Data/Hora Válida</th>
                                <th>Data/Hora Solicitada</th>
                                <th>Justicativa</th>
                                <th>Aprovar?</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Funcionario.Nome</td>
                                    <td>@item.Tipo</td>
                                    @if (@item.Ponto != null)
                                    {
                                        <td>@item.Ponto.DataMarcacao.GetValueOrDefault().ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@item.Ponto.DataValida.ToString("dd/MM/yyyy HH:mm")</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                        <td></td>
                                    }

                                    <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm") </td>
                                    <td>@item.Justificativa</td>
                                    <td>
                                        @Html.ActionLink("Aprovar", "AprovarRejeitarSolicitacao", new { id = item.Id, resposta = Seedwork.Const.RespostaSolicitacao.Aprovado }, new { @class = "btn btn-outline btn-xs btn-info" })
                                        @Html.ActionLink("Rejeitar", "AprovarRejeitarSolicitacao", new { id = item.Id, resposta = Seedwork.Const.RespostaSolicitacao.Reprovado }, new { @class = "btn btn-outline btn-xs btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!--   END TODOS   -->

        </div>
