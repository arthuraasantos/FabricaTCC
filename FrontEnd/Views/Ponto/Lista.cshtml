@using Dominio.Model;
@using Seedwork.Const;

@{
    ViewBag.Title = "Consultar";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

@model Dictionary<DateTime, List<Ponto>>

<h1 class="page-header">Consultar horários</h1>

<div class="panel panel-default">
    <div class="panel-heading">

        @using (Html.BeginForm("ListaAjustar", "Ponto", FormMethod.Post, new { @class = "form-inline" }))
        {
            <div class="form-group">
                @Html.Label("Email do Funcionário")
                @Html.TextBox("Email", (String)ViewBag.EmailLogado, new { @type = "email", @class = "form-control", @placeholder = "Email" })
            </div>

            <div class="form-group">
                @Html.Label("Mês/Ano")
                @Html.TextBox("Data", String.Format("{0: MM/yyyy}", DateTime.Now), new { @class = "form-control", @placeholder = "Mês/Ano", @id = "MesAno" })
            </div>
            <input type="submit" value="atualizar" class="btn btn-outline btn-success form-control" />
        }

    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-lg-12">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Movimentações do dia</th>
                                <th>Horas trabalhadas</th>
                                <th>Operações</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var data in Model)
                            {
                                <tr>

                                    <td>@data.Key.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @foreach (var hr in data.Value)
                                        {
                                            if (hr.Contabilizar)
                                            {
                                                hr.DataValida.ToString("HH:mm");
                                            }
                                        }
                                    </td>
                                    <td></td>
                                    <td>
                                        @Html.ActionLink("Ajustar", "Solicitar", "Solicitacao", new { data = data.Key.Date, solicitacao = TipoSolicitacao.Ajuste }, new { @class = "btn btn-outline btn-info" })
                                        @Html.ActionLink("Incluir", "Solicitar", "Solicitacao", new { data = data.Key.Date, solicitacao = TipoSolicitacao.Inclusao }, new { @class = "btn btn-outline btn-info" })
                                        @Html.ActionLink("Desconsiderar", "Solicitar", "Solicitacao", new { data = data.Key.Date, solicitacao = TipoSolicitacao.Desconsideracao }, new { @class = "btn btn-outline btn-info" })
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>