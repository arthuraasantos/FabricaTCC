@using Dominio.Model;
@{
    ViewBag.Title = "Consultar";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

@model List<Ponto>

<h1 class="page-header">Consultar horários</h1>

<div class="panel panel-default">
    <div class="panel-heading">

        @using (Html.BeginForm("Ajustar", "Ponto", FormMethod.Post, new { @class = "form-inline" }))
        {
            <div class="form-group">
                @Html.Label("Email Funcionário")
                @Html.TextBox("Email", "", new { @type = "email", @class = "form-control", @placeholder = "Email" })
            </div>
            <div class="form-group">
                @Html.Label("Data")
                @Html.TextBox("Data", "", new { @type = "date", @class = "form-control", @placeholder = "Data" })
            </div>
            <input type="submit" value="atualizar" class="btn btn-outline btn-success form-control" />
        }

    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-lg-12">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Hora Marcada</th>
                                <th>Hora Ajustada</th>
                                <th>Status do Ajuste</th>
                                <th>Operações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.DataDaMarcacao.ToString("HH:mm") </td>
                                    <td> @item.DataAjuste.GetValueOrDefault().ToString("HH:mm")</td>
                                    <td> @if (item.AjusteAprovado) { @Html.Label("Ajuste Aprovado") } else { @Html.Label("Ajuste Pendente") }</td>
                                    <td> @Html.ActionLink("Ajustar", "Visualizar", new { id = item.Id }, new { @class = "btn btn-outline btn-info" }) </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

