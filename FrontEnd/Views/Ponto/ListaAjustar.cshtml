@using Dominio.Model;
@using Seedwork.Const;

@{
    ViewBag.Title = "Consultar";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

@model Dictionary<DateTime, List<Ponto>>

<h1 class="page-header">Consultar horários</h1>

<div class="panel panel-default">
    <div class="panel-heading">

        @using (Html.BeginForm("ListaAjustar", "Ponto", FormMethod.Post, new { @class = "form-inline" }))
        {
            <div class="form-group">
                @Html.Label("Email do Funcionário")
                @Html.TextBox("Email", (String)ViewBag.EmailLogado, new { @type = "email", @class = "form-control", @placeholder = "Email" })
            </div>

            <div class="form-group">
                @Html.Label("Mês/Ano")
                @Html.TextBox("Data", String.Format("{0: MM/yyyy}", DateTime.Now), new { @class = "form-control", @placeholder = "Mês/Ano" })
            </div>
            <input type="submit" value="atualizar" class="btn btn-outline btn-success form-control" />
        }

    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-lg-12">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Data</th>

                                @for (int i = 0; i < (int)(ViewBag.MaiorBatidas / 2); i++)
                                {
                                    <th>Entrada</th>
                                    <th>Saída</th>
                                }
                                <th>Horas trabalhadas</th>
                                <th>Operações</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var data in Model)
                            {
                                <tr>

                                    <td>@data.Key.ToString("dd/MM/yyyy")</td>
                                    @for (int i = 0; i < ViewBag.MaiorBatidas; i++)
                                    {
                                        if (@data.Value.Count > i)
                                        {
                                            <td>@data.Value[i].DataValida.ToString("HH:mm")</td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                    }
                                    <td></td>
                                    <td>@Html.ActionLink("Ajustar", "Ajustar", new { data = data.Key.Date }, new { @class = "btn btn-outline btn-info" })</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



