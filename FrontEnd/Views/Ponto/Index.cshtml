<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MarcarPonto</title>
    <style>
        .titulo{
            width:100%;
            height:30%;
            text-align:center;
        }
        .img{
            padding:0;
        }
        .botao{
            padding-left:20%;
        }
        /*.btn-success {
            border-radius: 50%;
            height: 80px;
            width: 120px;
            text-align:center;
        }*/
    </style>
</head>
<body>
    <div class="titulo ">
        <img src="~/img/ponto.png" class="col-lg-4 col-lg-offset-4 img-responsive" style="text-align:center; height:200px; width:310px;">
    </div>
    <div class="col-lg-4 col-lg-offset-4">
        <br />
        @model FrontEnd.Models.PontoMarcar
        @using (Html.BeginForm("Marcar", "Ponto", FormMethod.Post))
        {

            @Html.TextBoxFor(f => f.Email, new { @type = "email", @class = "form-control", @placeholder = "Email" })<br />
            @Html.PasswordFor(f => f.Senha, new { @type = "password", @class = "form-control", @placeholder = "Senha" })<br />
            <input type="hidden" id="parametro" name="parametro" value="True" />
            <input type="submit" value="Marcar Ponto" class="btn btn-success btn-block" />
        }
    </div>
    <p>
        @ViewBag.Mensagem
    </p>


</body>
</html>




