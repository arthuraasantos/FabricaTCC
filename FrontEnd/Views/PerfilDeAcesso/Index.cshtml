@using Dominio.Model;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

<h1 class="page-header">Listagem de Perfis de Acesso</h1>
@Html.ActionLink("Criar Novo", "Novo", "PerfilDeAcesso", 
  new { @class = "btn btn-outline btn-default"})<br /><br />
@model List<PerfilDeAcesso>

<div class="row">
    <div class="col-lg-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="table_listaPerfis">
                        <thead>
                            <tr>
                                <th>Perfil</th>
                                <th>Operações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-sm-1">@item.Descricao</td>
                                    <td class="col-sm-1">
                                        @Html.ActionLink("Editar", "Visualizar", "PerfilDeAcesso",
                                        new {id = @item.Id},
                                        new { @class = "btn btn-outline btn-info"})
                                        @Html.ActionLink("Excluir", "Excluir", "PerfilDeAcesso", 
                                        new { id = @item.Id},
                                        new { @class = "btn btn-outline btn-warning" })
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<p>
    @ViewBag.Mensagem
</p>           
