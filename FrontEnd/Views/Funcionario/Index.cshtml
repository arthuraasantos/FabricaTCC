@using Dominio.Model;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.maskedinput.js"></script>
<script type="text/javascript">
    jQuery(function ($) {
        $("#Cpf").mask("999.999.999-99", { placeholder: " " });
        $("#DataNascimento").getDate();
    });
</script>
<script>
    function bloquearFuncionario(id) {
        var titulo, msg, tipo;

        $.ajax({
            url: "/Funcionario/BloquearFuncionario",
            data: {
                id: id
            },
            type: "GET",
            datatype: "json",
            contenttype: "application/json; charset=utf-8",
            success: function (data) {
                titulo = "Aviso";
                msg = "\"" + data + "\" bloqueado com sucesso";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-ok', "");
                location.reload();

            },
            error: function (data) {
                titulo = "Aviso";
                msg = "Erro ao bloquear \"" + data + "\" ";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-remove', "");
                location.reload();

            },
        });
    };

    function desbloquearFuncionario(id) {
        var titulo, msg, tipo;

        $.ajax({
            url: "/Funcionario/DesbloquearFuncionario",
            data: {
                id: id
            },
            type: "GET",
            datatype: "json",
            contenttype: "application/json; charset=utf-8",
            success: function (data) {
                titulo = "Aviso";
                msg = " \"" + data + "\" ativado com sucesso";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-ok', "");
                location.reload();

            },
            error: function (data) {
                titulo = "Aviso";
                msg = "Erro ao ativar \"" + data + "\" ";
                MostraMensagem(msg, titulo, 'glyphicon glyphicon-remove', "");
                location.reload();

            },
        });

    };

</script>

<h1 class="page-header">Listagem de Funcionários</h1>
@model List<Funcionario>

<div class="row">
    <div class="col col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @if (FrontEnd.Models.Sessao.PerfilFuncionarioLogado != Seedwork.Const.PerfilAcesso.Funcionario)
                {
                    @Html.ActionLink("Adicionar Funcionário", "Novo", "Funcionario", new { @class = "btn btn-primary" })
                }
            </div>
            <div class="panel panel-body">
                <div class="dataTables_wrapper">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Cpf</th>
                                <th>Data Nascimento</th>
                                <th>Email</th>
                                <th>Identidade(RG)</th>
                                @if (FrontEnd.Models.Sessao.PerfilFuncionarioLogado != Seedwork.Const.PerfilAcesso.Funcionario)
                                {
                                    <th>Operações</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Nome</td>
                                    <td>@item.Cpf</td>
                                    <td>@item.DataNascimento.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                                    <td>@item.Email</td>
                                    <td>@item.Identidade</td>
                                    @if (FrontEnd.Models.Sessao.PerfilFuncionarioLogado != Seedwork.Const.PerfilAcesso.Funcionario)
                                    {
                                        <td class="col-sm-2">

                                            @Html.ActionLink("Editar", "Visualizar", new { id = item.Id }, new { @class = "btn btn-outline btn-xs btn-info" })
                                            @if (FrontEnd.Models.Sessao.PerfilFuncionarioLogado == Seedwork.Const.PerfilAcesso.Administrador)
                                            {
                                                if (item.Bloqueado == "Y")
                                                {
                                                    <input type="button" class="btn btn-outline btn-xs btn-success" value="Ativar   " onclick="desbloquearFuncionario('@item.Id');" />
                                                }
                                                else
                                                {
                                                    <input type="button" class="btn btn-outline btn-xs btn-warning" value="Desativar" onclick="bloquearFuncionario('@item.Id');" />
                                                }
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
