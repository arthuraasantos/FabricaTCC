@using Dominio.Model;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}

<h1 class="page-header">Listagem de Funcionários</h1>
@model List<Funcionario>

@Html.ActionLink("Criar Novo", "Novo", "Funcionario",
        new { @class = "btn btn-outline btn-default" })
<br />
<br />

<div class="row">
    <div class="col col-lg-12">
        <div class="panel panel-default">
            <div class="panel panel-body">
                <div class="dataTables_wrapper">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Cpf</th>
                                <th>Data Nascimento</th>
                                <th>Email</th>
                                <th>Identidade(RG)</th>
                                <th>Operações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                              <tr>
                                  <td>@item.Nome</td>
                                  <td>@item.Cpf</td>
                                  <td>@item.DataNascimento</td>
                                  <td>@item.Email</td>
                                  <td>@item.Identidade</td>
                                  <td>
                                      @Html.ActionLink("Editar", "Visualizar",
                                         new { id = item.Id },
                                            new { @class = "btn btn-outline btn-info" })
                                      @Html.ActionLink("Excluir  ", "Excluir",
                                         new { id = item.Id },
                                         new { @class = "btn btn-outline btn-warning" })
                                  </td>
                              </tr>  
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

