@using Dominio.Model;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.maskedinput.js"></script>
<script type="text/javascript">
    jQuery(function ($) {
        $("#Cpf").mask("999.999.999-99", { placeholder: " " });
        $("#DataNascimento").getDate();
    });
</script>


<h1 class="page-header">Listagem de Funcionários</h1>
@model List<Funcionario>

@if (ViewBag.Permissao == "ADM")
{
    <div class="navbar">
        @Html.ActionLink("Criar Novo", "Novo", "Funcionario",
            new { @class = "btn btn-outline btn-default" })
        <br />
        <br />
    </div>
}

<div class="row">
    <div class="col col-lg-12">
        <div class="panel panel-default">
            <div class="panel panel-body">
                <div class="dataTables_wrapper">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Cpf</th>
                                <th>Data Nascimento</th>
                                <th>Email</th>
                                <th>Identidade(RG)</th>
                                @if (ViewBag.Permissao != "FUN")
                                {
                                    <th>Operações</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                              <tr>
                                  <td>@item.Nome</td>
                                  <td>@item.Cpf</td>
                                  <td>@item.DataNascimento.GetValueOrDefault().ToString("dd/MM/yyyy")</td>
                                  <td>@item.Email</td>
                                  <td>@item.Identidade</td>
                                  @if (ViewBag.Permissao == "GRH" || ViewBag.Permissao == "ADM")
                                  {
                                    <td class="col-sm-2">

                                       @Html.ActionLink("Editar", "Visualizar",
                                         new { id = item.Id },
                                            new { @class = "btn btn-outline btn-info" })
                                        @if (ViewBag.Permissao == "ADM")
                                        {
                                            @Html.ActionLink("Desativar", "#",
                                                 new { id = item.Id },
                                                 new { @class = "btn btn-outline btn-warning" })

                                            @Html.ActionLink("Excluir  ", "Excluir",
                                                 new { id = item.Id },
                                                 new { @class = "btn btn-outline btn-warning" })
                                        }
                                    </td>
                                  }
                              </tr>  
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

