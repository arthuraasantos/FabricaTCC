<script>
function exibirTextArea(){
    var isTextoExemploVisible = $("#textoExemplo").is(':visible');
    var txtPlanilhaVisible = $("#textoPlanilha").val();  
    
    if(isTextoExemploVisible){
        $("#textoExemplo").hide();
        $("#textoPlanilha").show().focus();
    }
    else{
        if(txtPlanilhaVisible == "")
        {
            $("#textoPlanilha").hide();
            $("#textoExemplo").show();
        }      
        
    }
};
        
</script>      