@{
    ViewBag.Title = "Solicitar Férias";
    Layout = "~/Views/Templates/_TemplateSistema.cshtml";
}
@model FrontEnd.Models.FeriasCriar
<link href="~/Content/Site.css" rel="stylesheet" />
<h2>Solicitar Férias</h2>
<hr />
@using (Html.BeginForm("SolicitarFerias", "Ferias", FormMethod.Post))
    {
    <div class="panel panel-default">
        <div class="panel-heading">
           <h3>Dados para solicitar férias</h3>
        </div>
        <div class="panel-heading">
            @ViewBag.Nome
        </div>
        <div class="panel-heading">
            @ViewBag.Email
        </div>
        <div class="panel-heading">
            @ViewBag.Empresa
        </div>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label>Email</label>
            <input type="text" value="@ViewBag.Email" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label>Início de Férias</label>
            <input type="date" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label>Fim de Férias</label>
            <input type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label>Justificativa</label>
            <input type="text" class="form-control" />
        </div>
        <input type="submit" value="Solicitar" class="btn btn-outline btn-success form-control" />
    </div>
    }
